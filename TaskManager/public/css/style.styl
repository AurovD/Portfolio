@import "functions.styl"
@import "fond.styl"


*
  margin 0
  padding 0
.body
  position relative
  box-sizing border-box
  overflow-x hidden
.header
  position fixed
  background-color #ffffff
  width 100vw
  z-index 500
  display flex
  justify-content space-between
  align-items center
  height 100px
  box-sizing border-box
  f_menu()
  padding 0 50px 0 50px
  .logo
    display flex
    align-items center
    text-decoration none
    .logo__img
      width 70px
    .logo__fredoka
      width 150px
      margin-left 20px

.userBlock
  width 500px
  display flex
  justify-content space-around
  .userBlock__link_log, .userBlock__link_sign
    text-decoration none
.container
  position relative
  min-height calc(100vh - 100px)
  overflow-x hidden
  top 100px
.footer
  display flex
  justify-content flex-end
  align-items center
  width 100vw
  height 100px
  background-color #0005
  .footer__text
    font-size 34px
    color #fff
    margin-right 100px
.indexImg
  background-image url("/img/main.jpg")
  z-index -1
  position absolute
  min-height calc(100vh - 100px)
.table
  background-image url("/img/table.png")
  z-index -1
  position fixed
  min-height calc(100vh)
.bg
  background-repeat no-repeat
  background-position center
  background-size cover
  display flex
  justify-content center
  align-items center
  width 100vw
  box-sizing border-box
  img
    display block
    margin-right 500px
  .slogan
    f_headers()
    position absolute
    top 37vh
    left 35vw
    color #fff
    height 200px
    overflow hidden
    .left
      margin-left 100px
.cover
  width 100vw
  min-height calc(100vh - 100px)
  background-color #0003
  position absolute
  top 0
  z-index -4
.userForm
  display flex
  flex-direction column
  input
    width 300px
  button
    width 300px
.task-container
  display: grid
  grid-template-columns calc(55% - 60px) 15% 10% 20%
  grid-column-gap 20px
  grid-template-rows 40px
  margin-bottom 20px
  align-items center
  z-index 0
  f_text()
  *
    padding 5px 0
.task-container__chbox
  display none
.task-container__text
  padding-left 40px
  position relative
  cursor pointer
  &::before
    position absolute
    content ""
    left 0
    top 5px
    width 30px
    height 30px
    border 1px solid
    border-radius 4px
.task-container__chbox:checked + .task-container__text::before
  content "âœ“"
  f_h3()
  display flex
  align-items center
.content
  padding-top 350px
.tasks
  width 800px
  margin auto
  min-height 1200px
  background-image url("/img/note.svg")
  background-position center
  background-repeat no-repeat
  background-size 140%
  padding 200px 50px 0px 130px
.tasks_h2
  f_h2()
  text-align center
  margin-bottom 30px
.tasks_h3
  f_h3()
.peopleList
  f_text()
  li
    list-style-type square
    padding-left 30px
    margin-bottom 10px
    list-style-position inside
.profMenu
  display flex
  justify-content space-between
  padding 0 50px
  .profMenu__but
    text-decoration none
    f_text()
    color #000
    border 1px solid #000
    padding 5px
    border-radius 5px
    background-color #fff
    color #000
.taskList
  display flex
  flex-wrap wrap
  justify-content space-between
  .taskCard
    width 300px
    height 300px
    margin 0 50px 50px 0
    padding-top 100px
    display flex
    align-items center
    flex-direction column
    background-image url("/img/sticker.png")
    background-position center
    background-repeat no-repeat
    background-size 100%
    .rowCard
      margin 10px 0 10px 0
    button
      border 2px solid #fff
      padding 5px
      background-color #0000
      cursor pointer
      border-radius 10px
.wrapper
  min-height 100vh
  width 1200px
  margin 100px auto
  a
    f_menu()
    text-decoration none
