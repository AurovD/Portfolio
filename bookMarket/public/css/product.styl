.formWrapper
  display flex
  justify-content center
  align-items center
fieldset
  width 1200px
  height 500px
  border-radius 30px
  text-align center
  input, select, textarea
    width 400px
    height 40px
    margin-top 10px
    padding-left 20px
    box-sizing border-box
  p
    font-weight bold
  button
    border none
    background-color #7bd9c8
.addProd
  display grid
  grid-template-columns repeat(3, 400px)
  grid-template-rows repeat(4, 60px)
  grid-column-gap 20px
  grid-row-gap 20px
  margin 20px
  label
    font-size 14px
    display block
.product-container
  //background-color red
  display flex
  justify-content space-between
  flex-wrap nowrap
  position relative
  form
    position absolute
    left 0
    top 0
.product-header
  margin 0
  text-align center
  line-height 70px
.bannerProd
  display flex
  align-items center
  //justify-content space-between
  width 1500px
  margin 0 auto
  .price
    width 300px
    .product-value
      font-size 30px
      font-weight bold
      color #bd2c00
.product-description
  font-size 14px
.imgWrapper
  width 700px
  margin 0 auto
  position relative
.product-box
  display flex
  flex-direction column
  height 100px
  width 150px
  margin-bottom 10px
.product-box_ann
  display flex
  flex-direction column
  justify-content space-between
  height 334px
  width 300px
  margin-bottom 10px
  //background-color #3c58e4
.product-head
  //background-color lightblue
  height 50px
  background-color #7bd9c8
  text-align center
  color #ffffff
  font-weight 700
  font-size 14px
  line-height 50px
  //background-image url("../img/bg/books.png")
  //background-repeat no-repeat
  //background-position left
  background-size 30%
.product-value
  //background-color blue
  line-height 50px
  font-size 12px
  text-align center
.change
  width 0px
  height 0px
  overflow hidden
  border none
  outline none
  padding 0
  &::before
    content ""
    position absolute
    top 0
    left 0
    width 30px
    height 30px
    background #fff url("/img/edit.svg") no-repeat center / 70%
    border 1px solid
    border-radius 4px
.reviews-container
  margin-top 30px
.rating span
  cursor pointer
.reviews
  display flex
.reviewCard
  width 200px
  height 200px
  border 1px solid #7bd9c8
  margin 20px 20px 20px 0
  position relative
  img
    width 150px
    position absolute
    top -40px
    right -50px
.slideshow-container
  margin 0 auto
  max-width 600px
  height 300px
  position relative
  display flex
  justify-content center
  align-items center
  img
    display block
    width 150px
    margin 0 auto
.count
  width 50px
  height 45px
  font-size 16px
  font-weight bold
  text-align center
  border none
.buyProduct
  width 150px
  height 50px
  border none
  background-color #85D3FF
  cursor pointer
  color #ffffff
  font-weight bold
.buyProd
  text-align center
  margin 30px 0
  font-size 0
  height 50px
.prev, .next
  cursor pointer
  position absolute
  top 50%
  width auto
  padding 16px
  margin-top -22px
  color #fff
  font-weight bold
  font-size 18px
  transition 0.6s ease
  border-radius 3px
  user-select none
  background-color #4e4e4e
.mySlides
  display none

/* Position the "next button" to the right */
.next
  right 0
.prev
  left 0

.dots
  width 50px
  display flex
  margin 0 auto
/* On hover, add a black background color with a little bit see-through */
.prev:hover, .next:hover
  background-color rgba(0,0,0,0.8)


.dot
  cursor pointer
  height 15px
  width 15px
  margin 0 5px
  background-color #bbb
  border-radius 50%
  display inline-block
  transition background-color 0.6s ease
  &.active, &.hover
      background-color #717171

.fade
  -webkit-animation-name fade
  -webkit-animation-duration 1.5s
  animation-name fade
  animation-duration 1.5s


@-webkit-keyframes fade
  from {opacity: .4}
  to {opacity: 1}


@keyframes fade
  from {opacity: .4}
  to {opacity: 1}