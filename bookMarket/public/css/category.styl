.headContainer
  width 100%
  height 250px
  background-repeat no-repeat
  background-position center
  color #fff
  position relative
  margin-bottom 30px
.engHeader
  background-image url("/img/bg/english.jpg")
.loveHeader
  background-image url("/img/bg/lovelove.jpg")
  background-position-y -1050px
.foreignHeader
  background-image url("/img/bg/foreign.jpg")
  background-position-y -400px
  background-size 100%
  background-attachment fixed
.popHeader
  background-image url("/img/bg/pop.jpg")
  background-position-y -1000px
.interHeader
  background-image url("/img/bg/web.jpg")
  background-position-y -500px
  background-size cover
.bookCard
    cursor pointer
    width 300px
    height 300px
    margin-bottom 2px
    margin-right 40px
    position relative
    img 
      z-index 1
      width 150px
.plashka
  height 80px
  width 100%
  position absolute
  top 70px
  background-color #c6c6c5
  z-index 2
  text-align right
  line-height 80px
  padding-right 30px
  box-sizing border-box
  color #fff
.card
    cursor pointer
    width 300px
    height 300px
    margin-bottom 2px
    margin-right 2px
    position absolute
    z-index 3
    font-size 20px
    text-align center
    img
      display block
      margin-bottom 10px
