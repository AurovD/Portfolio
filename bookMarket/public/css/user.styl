.login-container
  width 700px
  margin 0 auto
.adminMenu
  display flex
  cursor pointer
  li
    list-style-type none
    margin-right 20px
    background-color #000
    color #ffffff
    font-weight bold
    padding 10px
.profileItem
  display none
.active
    display block
.form-nav
  display flex
  list-style-type none
  width 100%
  margin-bottom 130px
  li
    cursor pointer
    padding 15px
    background-color #fff
    color #000
    &.active
      background-color #000
      color #dedede
.form-container
  display none
  &.active
    display block
.logHead
  display none
  &.active
    display block
.wrapperLogin
  display flex
  flex-direction row-reverse
.login-container
  flex-flow 1
  flex-shrink 1
.userAction
  width 50%
.userRow
  display grid
  grid-template-columns 150px 300px 300px 200px repeat(3, auto)
  grid-column-gap 20px
